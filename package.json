{
  "name": "arbitragex-supreme-edge",
  "version": "3.0.0",
  "description": "ArbitrageX Supreme V3.0 - Cloudflare Edge Backend",
  "private": true,
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --ip 0.0.0.0 --port 3000",
    "dev:d1": "wrangler pages dev dist --d1=arbitragex-edge-production --local --ip 0.0.0.0 --port 3000",
    "build": "tsc --outDir dist && cp dist/index.js dist/_worker.js",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name arbitragex-supreme-edge",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000",
    "db:migrate:local": "wrangler d1 migrations apply arbitragex-edge-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply arbitragex-edge-production", 
    "db:seed": "wrangler d1 execute arbitragex-edge-production --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "db:console:local": "wrangler d1 execute arbitragex-edge-production --local",
    "db:console:prod": "wrangler d1 execute arbitragex-edge-production",
    "git:init": "git init && git add . && git commit -m 'Initial commit'",
    "git:commit": "git add . && git commit -m",
    "git:status": "git status",
    "git:log": "git log --oneline"
  },
  "dependencies": {
    "hono": "^4.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20250705.0",
    "wrangler": "^3.78.0",
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}