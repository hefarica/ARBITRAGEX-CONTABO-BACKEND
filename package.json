{
  "name": "arbitragex-supreme-blockchain",
  "version": "1.0.0",
  "description": "ArbitrageX Supreme - Smart Contracts",
  "private": true,
  "scripts": {
    "compile": "npx hardhat compile",
    "deploy:polygon": "npx hardhat run scripts/deploy-production.js --network polygon",
    "deploy:bsc": "npx hardhat run scripts/deploy-production.js --network bsc", 
    "deploy:arbitrum": "npx hardhat run scripts/deploy-production.js --network arbitrum",
    "deploy:testnet": "npx hardhat run scripts/deploy-production.js --network mumbai",
    "test": "npx hardhat test",
    "coverage": "npx hardhat coverage",
    "gas-report": "REPORT_GAS=true npx hardhat test"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "@types/node": "^20.0.0",
    "dotenv": "^16.3.1",
    "hardhat": "^2.19.4",
    "hardhat-gas-reporter": "^1.0.9",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "ethers": "^6.14.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}