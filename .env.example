# ArbitrageX Supreme V3.0 - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ===========================================
# BLOCKCHAIN CONFIGURATION
# ===========================================

# Ethereum Mainnet RPC URL (Infura, Alchemy, etc.)
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID

# Ethereum WebSocket URL for real-time monitoring  
MAINNET_WS_URL=wss://mainnet.infura.io/ws/v3/YOUR_PROJECT_ID

# Fork block number for Anvil simulation (latest stable block)
FORK_BLOCK_NUMBER=18500000

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# PostgreSQL database password
POSTGRES_PASSWORD=secure_postgres_password_here

# Redis password (optional, can be empty for development)
REDIS_PASSWORD=secure_redis_password_here

# ===========================================
# MEV SEARCHER CONFIGURATION
# ===========================================

# Private key for searcher wallet (without 0x prefix)
# WARNING: Use a dedicated wallet with limited funds for security
SEARCHER_PRIVATE_KEY=your_private_key_here

# Private key for relays client (can be same as searcher)
RELAYS_PRIVATE_KEY=your_relays_private_key_here

# Flashbots bundle executor address
FLASHBOTS_BUNDLE_EXECUTOR=0x1234567890123456789012345678901234567890

# Maximum gas price in Gwei
MAX_GAS_PRICE=100

# Minimum profit threshold in ETH
MIN_PROFIT_THRESHOLD=0.01

# Simulation timeout in milliseconds
SIMULATION_TIMEOUT=5000

# Maximum concurrent simulations
MAX_CONCURRENT_SIMS=10

# ===========================================
# RELAY CONFIGURATION
# ===========================================

# Flashbots relay URL
FLASHBOTS_RELAY_URL=https://relay.flashbots.net

# bloXroute relay URL
BLOXROUTE_RELAY_URL=https://mev.api.blxrbdn.com

# Eden relay URL  
EDEN_RELAY_URL=https://api.edennetwork.io/v1

# Builder API key for relays
BUILDER_API_KEY=your_builder_api_key_here

# ===========================================
# API CONFIGURATION
# ===========================================

# JWT secret for API authentication
JWT_SECRET=your_very_secure_jwt_secret_here

# API rate limit (requests per minute)
API_RATE_LIMIT=1000

# Reconciliation interval in milliseconds
RECONCILIATION_INTERVAL=300000

# ===========================================
# MONITORING & ALERTING
# ===========================================

# Grafana admin password
GRAFANA_PASSWORD=secure_grafana_password_here

# SMTP configuration for alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_app_password

# Alert email addresses
ALERT_EMAIL_FROM=alerts@arbitragex.io
DEFAULT_EMAIL_TO=admin@arbitragex.io
CRITICAL_EMAIL_TO=critical@arbitragex.io,ceo@arbitragex.io
MEV_TEAM_EMAIL=mev-team@arbitragex.io
INFRA_TEAM_EMAIL=infra@arbitragex.io
SECURITY_TEAM_EMAIL=security@arbitragex.io
TRADING_TEAM_EMAIL=trading@arbitragex.io

# Slack webhook URL for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# PagerDuty routing key for critical alerts
PAGERDUTY_ROUTING_KEY=your_pagerduty_routing_key

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# SSL certificate paths (for production)
SSL_CERT_PATH=/etc/ssl/certs/arbitragex.crt
SSL_KEY_PATH=/etc/ssl/private/arbitragex.key

# Backup encryption key
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_here

# ===========================================
# PERFORMANCE TUNING
# ===========================================

# Memory limits (in MB)
SEARCHER_MEMORY_LIMIT=2048
POSTGRES_MEMORY_LIMIT=1024
REDIS_MEMORY_LIMIT=512

# CPU limits (number of cores)
SEARCHER_CPU_LIMIT=2
POSTGRES_CPU_LIMIT=1

# Network settings
MAX_CONNECTIONS=1000
CONNECTION_TIMEOUT=30

# ===========================================
# DEVELOPMENT/TESTING
# ===========================================

# Environment (development|staging|production)
NODE_ENV=production

# Debug mode (true|false)
DEBUG_MODE=false

# Log level (debug|info|warn|error)
LOG_LEVEL=info

# Test mode configuration
TEST_MODE=false
TEST_WALLET_PRIVATE_KEY=your_test_wallet_key